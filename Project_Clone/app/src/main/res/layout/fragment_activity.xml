<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ActivityFragment"
    android:layout_margin="15dp"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/user"
            style="@style/user"
            android:src="@drawable/user"/>
        <ImageView
            android:id="@+id/add"
            style="@style/top_right"
            android:src="@drawable/ic_plus"/>
        <TextView
            android:layout_below="@+id/user"
            style="@style/title"
            android:text="활동"/>
    </RelativeLayout>



       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <ImageView
            android:id="@+id/gif_img"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/activity_main" />
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/a_tv_1"
            style="@style/tv1"
            android:layout_below="@+id/gif_img"
            android:text="모든 러닝을 기념하세요"   />
        <TextView
            android:id="@+id/a_tv_2"
            style="@style/tv2"
            android:textSize="16dp"
            android:layout_below="@+id/a_tv_1"
            android:layout_marginTop="15dp"
            android:text="@string/activity_content"/>
        <TextView
            android:id="@+id/a_tv_3"
            style="@style/tv2"
            android:textSize="16dp"
            android:layout_below="@+id/a_tv_2"
            android:layout_marginTop="15dp"
            android:text="함께 달려 봐요!"/>

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/btn_layout_round"
            android:layout_marginTop="50dp"
            android:layout_width="3000dp"
            android:layout_height="50dp"
            android:layout_below="@id/a_tv_3"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:text="러닝 시작하기" />
    </RelativeLayout>

</LinearLayout>
