<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddActivity"
    android:orientation="vertical"
    android:layout_margin="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/top_title"
            android:layout_centerInParent="true"
            android:layout_marginTop="0dp"
            android:text="러닝 추가" />
        <TextView
            android:id="@+id/close"
            style="@style/top_title"
            android:text="취소"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
       style="@style/line"/>
    <RelativeLayout
       style="@style/running_add_l">
        <TextView
            style="@style/running_add_t1"
            android:text="이름(선택사항)"  />
        <TextView
            style="@style/running_add_t2"
            android:textColor="#000"
            android:text="편집"/>
    </RelativeLayout>
    <RelativeLayout
        style="@style/running_add_l">
        <TextView
            style="@style/running_add_t1"
            android:text="날짜"  />
        <TextView
            style="@style/running_add_t2"
            android:textColor="#000"
            android:text="2022.12.21. / 19:02"/>
    </RelativeLayout>
    <RelativeLayout
        style="@style/running_add_l">
        <TextView
            style="@style/running_add_t1"
            android:text="거리"  />
        <TextView
            style="@style/running_add_t2"
            android:text="0.00Km"/>
    </RelativeLayout>
    <RelativeLayout
        style="@style/running_add_l">
        <TextView
            style="@style/running_add_t1"
            android:text="운동 시간"  />
        <TextView
            style="@style/running_add_t2"
            android:text="편집"/>
    </RelativeLayout>
    <RelativeLayout
        style="@style/running_add_l">
        <TextView
            style="@style/running_add_t1"
            android:text="페이스"  />
        <TextView
            style="@style/running_add_t2"
            android:text="편집"/>
    </RelativeLayout>
    <RelativeLayout
        style="@style/running_add_l">
        <TextView
            style="@style/running_add_t1"
            android:text="실내"
            />
        <Switch
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/btn_layout_round"
        android:layout_gravity="center"
        android:layout_marginTop="380dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#A6A6A6"
        android:fontFamily="@font/nanumsquareneo_b_rg"
        android:textSize="18dp"
        android:textColor="#fff"
        android:text="저장"/>

</LinearLayout>