<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ln_ch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/small_15k"
            android:id="@+id/img_ch_1"/>

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="12월 주간 챌린지"
                    android:id="@+id/tv_ch_1"/>
                <TextView
                    android:layout_below="@id/tv_ch_1"
                    style="@style/below_title"
                    android:text="이번 주 15km를 달려보세요."
                    android:id="@+id/tv_ch_2"/>
                <TextView
                    android:layout_below="@id/tv_ch_2"
                    style="@style/below_title"
                    android:text="6일 남음"
                    android:id="@+id/tv_ch_3"/>

            <ImageView
                android:id="@+id/img_ch_2"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_right"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>